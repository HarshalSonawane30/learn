/* Global responsive helpers and defaults */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap');

:root{
	--max-content-width: 1100px;
	--font-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
	--font-heading: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
	--text-base: 1rem;
	--leading-normal: 1.5;
	--font-normal: 400;
}

html,body,#root{
	height:100%;
}

body{
	font-family: var(--font-primary);
	font-size: var(--text-base);
	line-height: var(--leading-normal);
	font-weight: var(--font-normal);
	color: #0f172a;
	-webkit-font-smoothing:antialiased;
	-moz-osx-font-smoothing:grayscale;
	margin:0;
	background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
	min-height: 100vh;
}

img,svg{ max-width:100%; height:auto; }

.container, .landing-hero .hero-inner, .related-section{
	max-width: var(--max-content-width);
}

/* Utility: responsive stack for small screens */
.stack-sm {
	display:flex;
	gap:1rem;
}
@media (max-width:768px){
	.stack-sm{ flex-direction:column; }
}

/* Make cards and images nicely responsive across the app */
.card img{ width:100%; height:auto; object-fit:cover; }

/* Accessibility: larger hit targets on small screens */
button, a.btn {
	min-height: 40px;
}

/* Ensure forms and auth layout adapt */
.auth-card{ width:100%; max-width:480px; }

/* Small utility to center the main content on narrow screens */
.center-max {
	margin-left: auto; margin-right: auto; padding-left:1rem; padding-right:1rem;
}

/* Reduce big headings on small screens to avoid overflow */
@media (max-width: 576px){
	h1.display-4{ font-size:1.6rem; }
}
